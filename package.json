{
  "name": "logging-library",
  "version": "0.3.0",
  "license": "MIT",
  "author": "Christoph Fricke <christoph@frickeonline.de> (https://christoph-fricke.de)",
  "description": "Extensible logger with simple class based, fluent interface api written in typescript.",
  "keywords": [
    "logging",
    "logger",
    "ts",
    "typescript",
    "class based",
    "fluent interface",
    "context",
    "extensible"
  ],
  "homepage": "https://logging-library.vercel.app",
  "repository": "github:christoph-fricke/logging-library",
  "main": "lib/umd/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types",
  "sideEffects": false,
  "files": [
    "lib",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "prepublishOnly": " npm test && npm run build",
    "build": "rm -rf lib && rollup -c rollup.config.ts",
    "build:docs": "rm -rf docs && typedoc",
    "format": "prettier --write .",
    "lint": "eslint . && prettier -c .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@types/jest": "^26.0.5",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rollup": "^2.22.1",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^26.1.3",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md,yml}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint",
      "npm run test -- --watchAll false --bail --findRelatedTests"
    ]
  }
}
