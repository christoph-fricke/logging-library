{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "lib": ["ES6"],

    "importHelpers": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "rootDir": "./src",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
